{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableRateLimiting"
  ],
  "packageRules": [
    {
      "description": "Limit TypeScript updates for Angular related projects",
      "matchPackageNames": ["typescript", "tslib"],
      "matchJsonata": ["deps['@angular/core' in depName]"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ]
}
